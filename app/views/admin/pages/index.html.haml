= form_tag admin_pages_path, :method => :get, :id => :category_filter_form do
  = select_tag :category_id, options_for_select([["---",nil]]+@categories.map{ |s| [s.name, s.id]}, params[:category_id])
  = submit_tag "", :class => :hidden
= link_to "Новая страница", new_admin_page_path, :id => :new_page
%table.admin_list
  %tr
    %th id
    %th Имя
    %th Ссылка
    %th Состояние
    %th Действия
  - @pages.each do |page|
    %tr.admin_item
      %td= page.id
      %td= link_to page.name, edit_admin_page_path(page)
      %td= link_to page.path, page.path
      %td= link_to_toggle page
      %td
        = form_for [:admin, page] do |f|
          = f.text_field :show_order
          = hidden_field_tag :category_id, params[:category_id]
          = f.submit :class => :hidden
        = link_to "Удалить", admin_page_path(page), :method => :delete, :confirm => "Вы уверены?"