= link_to "Новая страница", new_admin_page_path, :id => :new_page
%table.admin_list
  %tr
    %th id
    %th Имя
    %th Ссылка
    %th Состояние
    %th Действия
  - @pages.each do |page|
    %tr.admin_item
      %td= page.id
      %td= link_to page.name, edit_admin_page_path(page)
      %td= link_to page.path, page.path
      %td= link_to_toggle page
      %td
        = form_for [:admin, page] do |f|
          = f.text_field :show_order
          = f.submit :class => :hidden
        = link_to "Удалить", admin_page_path(page), :method => :delete, :confirm => "Вы уверены?"