%h1 Начать новое обсуждение
= form_for @discussion do |f|
  = f.hidden_field :subject_id
  = f.hidden_field :subject_type
  %div
    .left_label= f.label :title
    .right_value= f.text_field :title

  #preview
  %div
    = f.fields_for :says, @say do |say|
      .left_label
        = say.label :text
      .right_value
        = say.text_area :text, :id => :say_text, :class => :markitup

  %div
    .right_value= f.submit "Начать обсуждение"
