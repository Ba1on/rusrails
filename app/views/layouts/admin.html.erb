<!DOCTYPE html>
<html>
<head>
  <title>Административная зона</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <% if notice %><div id="notice"><%= notice %></div><% end %>
  <% if alert %><div id="alert"><%= alert %></div><% end %>
  <% if admin_signed_in? %>
  <ul class="admin_menu">
    <li><%= link_to "Профиль", edit_admin_registration_path, :id => "admin_edit" %></li>
    <li><%= link_to "Выйти", destroy_admin_session_path, :id => "admin_logout" %></li>
  </ul>
  <% end %>

<%= yield %>

</body>
</html>
