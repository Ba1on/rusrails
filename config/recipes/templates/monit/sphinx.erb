check process sphinx_searchd_<%= application %> with pidfile <%= current_path %>/log/searchd.<%= rails_env %>.pid
  start program = "/usr/bin/searchd --pidfile --config <%= current_path %>/config/<%= rails_env %>.sphinx.conf"
  stop program = "/usr/bin/searchd --pidfile --config <%= current_path %>/config/<%= rails_env %>.sphinx.conf"
